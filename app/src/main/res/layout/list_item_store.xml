<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/store_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:background="@drawable/btn_listitem"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/store_image_wrapper_size"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <ImageView
                android:id="@+id/shop_logo_blur"
                android:visibility="visible"
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/store_image_wrapper_size"
                android:scaleType="fitXY"
                android:background="@drawable/rounded_border_image"
                android:layout_height="@dimen/store_image_wrapper_size" />
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_enter"
                android:tint="@color/white"
                android:padding="3dp"
                android:background="@drawable/rounded_bg"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/white"
                android:marqueeRepeatLimit="marquee_forever"
                android:background="@drawable/store_name_background"
                android:layout_gravity="center_horizontal"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>