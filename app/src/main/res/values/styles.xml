<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/updating_balance</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomProgress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/processing</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space48</item>
        <item name="android:background">@drawable/nav_drawer_row_item_background</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:tag">@string/tag_nav_drawer_main_entry</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:layout_width">@dimen/space24</item>
        <item name="android:layout_height">@dimen/space24</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/space16</item>
    </style>

    <style name="NavDrawerRowItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/nav_drawer_item_main_text</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/space72</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textColor">@color/CTA_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomCardButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CardLabel">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/card_label_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <item name="android:padding">@dimen/items_inbetween_medium</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CardInput">
        <item name="android:layout_marginLeft">@dimen/items_inbetween</item>
        <!--<item name="android:layout_marginRight">@dimen/items_inbetween</item>-->
        <item name="android:layout_marginTop">@dimen/items_inbetween</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/items_inbetween_medium</item>
    </style>


    <style name="CardStyle">
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="invoice_header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/invoice_font</item>
    </style>
    <style name="invoice_text_title">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/invoice_font</item>
    </style>
    <style name="invoice_footer_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/invoice_font</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>